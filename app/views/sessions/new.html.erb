<div class="border-form-div">
  <h2>Sign in</h2>

  <%= form_tag sessions_path , {class: 'form-horizontal'} do |f|%>
      <div class="form-group">
        <div class="col-sm-6">
          <%= label_tag :email %><br />
          <%= text_field_tag :email, params[:email],class: "form-control"  %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-6">
            <%= label_tag :password %><br />
            <%= password_field_tag :password,"", autocomplete: "off", class: "form-control"  %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-6 col-sm-offset-2">
              <p class="button"><%= submit_tag "Log in" , class: 'btn btn-primary'%></p>
              </div>
            </div>
          <% end %>
        </div>
